{
	"compilerOptions": {
		"strict": false,
		"moduleResolution": "node",
		"target": "es2019",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": false,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"lib": [
			"ES5",
			"ES6"
		]
	},
	"exclude": [
		"node_modules"
	]
}